                    android:hint="@string/txt_apellidos"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="16dp"
                    app:met_baseColor="@color/color_primary_text"
                    app:met_primaryColor="@color/colorPrimary"
                    app:met_floatingLabel="highlight"
                    android:textStyle="bold"
                    android:textSize="@dimen/tamano_caja_texto"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp" />-->

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/lytxtNombres"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lytxtApellidos"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp">

                    <EditText
                        android:id="@+id/txtNombres"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/txt_nombres"
                        android:textSize="@dimen/tamano_caja_texto"/>
                </android.support.design.widget.TextInputLayout>

                <!--<com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/txtNombres"

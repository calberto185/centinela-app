                    android:layout_height="72dp"
                    android:hint="@string/txt_nombres"
                    android:layout_below="@+id/txtApellidos"
                    app:met_baseColor="@color/color_primary_text"
                    app:met_primaryColor="@color/colorPrimary"
                    app:met_floatingLabel="highlight"
                    android:textStyle="bold"
                    android:textSize="@dimen/tamano_caja_texto"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp" />-->

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/lytxtCorreo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lytxtNombres"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp">

                    <EditText
                        android:id="@+id/txtCorreo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/txt_correo"
                        android:textSize="@dimen/tamano_caja_texto"/>
                </android.support.design.widget.TextInputLayout>

                <!--<com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/txtCorreo"
